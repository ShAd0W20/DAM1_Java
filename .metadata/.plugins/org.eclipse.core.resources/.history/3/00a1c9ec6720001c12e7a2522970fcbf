import java.util.Scanner;

public class conditionals {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		String name = "";
		int age = 0;
		String licenseOutput = "";
		char license = 'n';
		
		System.out.println("Digue'm el teu nom");
		
		name = input.nextLine();
		
		System.out.println("Quants anys tens?");
		
		age = input.nextInt();
		input.nextLine();
		
		if(age >= 18) {
			System.out.println("Tens carnet de conduir?");
			
			licenseOutput = input.nextLine();
			
			if(licenseOutput == "Si" || licenseOutput == "si" || licenseOutput == "s") {
				license = licenseOutput.charAt(0);
			}
						
			
		}
		
		System.out.println("Et dius " + name + ", tens " + age + " anys" + license);
	}

}

import java.util.Scanner;

public class conditionals {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		String name = "";
		int age = 0;
		char carLicense = 'n';
		String licenseOutput = "";
		
		System.out.println("Digue'm el teu nom");
		
		name = input.nextLine();
		
		System.out.println("Quants anys tens?");
		
		age = input.nextInt();
		
		if(age >= 18) {
			System.out.println("Tens carnet de conduir?");
			String license = input.nextLine();
			
			if(license == "Si" || license == "si") {
				licenseOutput = "i tens carnet de conduir";
			}			
			
		}
		
		System.out.println("Et dius " + name + ", tens " + age + " anys" + licenseOutput);
	}

}
